<div class="day-mits">
  <div class="page-header">
    <h1>MIT's <small>for {{name}}</small></h1>
  </div>
  {{#each mit in mits}}
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            {{#link-to 'mit' mit}}
              {{mit.title}}
            {{/link-to}}
            {{#if mit.tagArray.length}}
              {{#each tag in mit.tagArray}}
                <span class='label label-info'>{{tag}}</span>
              {{/each}}
            {{/if}}
            <small class="pull-right">{{mit.comments.length}} comments</small>
          </h3>
        </div>
        {{#if mit.description.length}}
          <div class="panel-body">
            <p>{{mit.description}}</p>
          </div>
        {{/if}}
      </div>
  {{/each}}
</div>
